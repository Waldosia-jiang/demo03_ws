
<launch>
    <!--1.在参数服务器中载入 urdf 文件-->
<param name="robot_description" textfile="$(find ros_06_urdf_rviz)/urdf/urdf/demo06_car.urdf"/>
<!--<param name="robot_description" command="$(find xacro)/xacro $(find ros_06_urdf_rviz)/urdf/urdf/demo06_car.urdf"/>-->

    <!--启动 rviz -->
<node pkg="rviz" type="rviz" name="rviz" args="-d $(find ros_06_urdf_rviz)/config/show_mycar.rviz"/>

    <!--
只有上述两条语句：
   表现：设置不显示
   提示：No tf data.  Actual error: Fixed Frame [base_link] does not exist
   原因：rviz中显示URDF时，必须发布不同部件之间的坐标系关系
   解决：ROS中提供了关于机器人模型显示的坐标发布相关节点（两个）
-->

    <!-- 添加关节状态发布节点 --> 
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />
    <!-- 添加机器人状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

    <!--集成 arbotix 运动控制节点，并且加载参数-->
    <node pkg="arbotix_python" type="arbotix_driver" name="driver" output="screen">
       <rosparam command="load" file="$(find ros_06_urdf_rviz)/config/control.yaml"/>
       <param name="sim" value="ture"/>
    </node>

</launch>