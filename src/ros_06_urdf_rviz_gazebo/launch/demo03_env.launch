<launch>
<!--1.在参数服务器中载入 urdf 文件：已经实现传动关系和传感器的参数定义-->
<param name="robot_description" command="$(find xacro)/xacro $(find ros_06_urdf_rviz_gazebo)/urdf/car.urdf.xacro" />

<!-- 运行joint_state_publisher节点，发布机器人的关节状态  -->
<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" >
    <param name="rate" value="50"/>
</node> 

<!-- 运行robot_state_publisher节点，发布tf  -->
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"  output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
</node>

<!--2.启动 Gazebo 仿真环境 -->
<include file="$(find gazebo_ros)/launch/empty_world.launch">
  <!-- <arg name="world_name" value="$(find icarmulti_gazebo)/worlds/playground.world"/> -->
  <arg name="world_name" value="$(find ros_06_urdf_rviz_gazebo)/worlds/box_house.world"/>
</include>

<!--3.在Gazebo中添加机器人模型 -->
<node pkg="gazebo_ros" type="spawn_model" name="spawn_model" args="-urdf -model car -param robot_description"/>

<!--启动 rviz -->
<node pkg="rviz" type="rviz" name="rviz" args="-d $(find ros_06_urdf_rviz)/config/show_mycar.rviz"/>

</launch>